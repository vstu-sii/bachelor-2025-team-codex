{
  "id": null,
  "title": "Backend Metrics Dashboard",
  "timezone": "browser",
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Request Rate (req/s)",
      "targets": [
        {
          "expr": "rate(http_requests_total[1m])",
          "legendFormat": "requests/sec"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Response Time (ms)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le)) * 1000",
          "legendFormat": "p95 latency"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Error Rate (%)",
      "targets": [
        {
          "expr": "rate(http_requests_total{status!~\"2..\"}[5m]) / rate(http_requests_total[5m]) * 100",
          "legendFormat": "error rate"
        }
      ]
    }
  ]
}
